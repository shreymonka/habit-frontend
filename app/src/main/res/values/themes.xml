<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Habit" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.Habit" parent="Base.Theme.Habit" />

    <!-- Base Button -->
    <style name="base_button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingVertical">@dimen/_15sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Default Button -->
    <style name="default_button" parent="base_button">
        <item name="android:background">@drawable/bg_base_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="base_color_default_button" parent="base_button">
        <item name="android:background">@drawable/bg_app_color_default_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="base_color_stroke_button" parent="base_button">
        <item name="android:background">@drawable/bg_app_color_stroke_button</item>
        <item name="android:textColor">@color/app_text</item>
    </style>

    <!-- White Button -->
    <style name="white_button" parent="base_button">
        <item name="android:background">@drawable/bg_white_button</item>
        <item name="android:textColor">@color/app_text</item>
    </style>

    <!-- Stroke Button -->
    <style name="stroke_button" parent="base_button">
        <item name="android:background">@drawable/bg_stroke_button</item>
        <item name="android:textColor">@color/app_green</item>
    </style>

    <!-- Alert Dialog -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>